<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-migrate/3.0.1/jquery-migrate.min.js"></script>
    <title>@ViewBag.Title - EasierChair</title>
    <style>
        .navbar-nav > li > .dropdown-menu {
            background-color: #000000;
        }

        .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited {
            background-color: #000000 !important;
        }
        .ui-helper-hidden-accessible {
            visibility: hidden;
        }
    </style>
</head>
<body>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">EasierChair</a>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						Login
						<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<input type="button" value="Continue as Author" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("login","authors") + "'");" />
						<input type="button" value="Continue as PC Member" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("login","pcmembers") + "'");" />
					</ul>
				</li>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						Register
						<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<input type="button" value="Register as Author" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("register","authors") + "'");" />
						<input type="button" value="Register as PC Member" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("register","pcmembers") + "'");" />
					</ul>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
	</div>

	@RenderSection("scripts", required: false)
</body>
</html>